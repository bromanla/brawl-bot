/* Visit https://aka.ms/tsconfig.json to read more about this file */

{
  "compilerOptions": {
    /* Base options */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2024",
    "lib": ["es2024"],

    /* Strictness */
    "strict": true,
    "forceConsistentCasingInFileNames": true,

    /* Typescript transpiling */
    "moduleResolution": "NodeNext",
    "module": "NodeNext",

    /* Node Stuff */
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["src/**/*.ts"]
}
